@model Category;
@{
    ViewData["Title"] = "Category Create Page";
    var category = Model;
}

<form action="/Category/SaveCategory" method="post">
    <div class="form-group">
        <input type="hidden" class="form-control" id="Id" name="Id" value="@category.Id">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@category.Name">
    </div>
    <br>
    <button style="display:center" type="submit" class="btn btn-primary">Submit</button>
</form>